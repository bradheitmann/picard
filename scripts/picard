#!/usr/bin/env bash
# PICARD v2.1 - Beginner-Friendly Interface

BUN="${HOME}/.bun/bin/bun"
INTERACTIVE="${HOME}/.dev-ts/src/guided-menu.ts"
PICARD_CLI="${HOME}/.dev-ts/src/picard-simple.ts"

# Check if bun is installed
if [ ! -f "$BUN" ]; then
    echo "ðŸ–– PICARD requires Bun"
    echo ""
    echo "Install: curl -fsSL https://bun.sh/install | bash"
    echo "Then: exec \$SHELL"
    exit 1
fi

# If no arguments, show interactive friendly interface
if [ $# -eq 0 ]; then
    exec "$BUN" run "$INTERACTIVE"
else
    # With arguments, run CLI
    exec "$BUN" run "$PICARD_CLI" "$@"
fi
