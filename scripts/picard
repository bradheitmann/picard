#!/usr/bin/env bash
# PICARD v2.1 - Simple & Usable
# Non-blocking CLI (like PSA, but better)

BUN="${HOME}/.bun/bin/bun"
PICARD_SIMPLE="${HOME}/.dev-ts/src/picard-simple.ts"

# Check if bun is installed
if [ ! -f "$BUN" ]; then
    echo "ðŸ–– PICARD requires Bun"
    echo ""
    echo "Install: curl -fsSL https://bun.sh/install | bash"
    echo "Then: exec \$SHELL"
    exit 1
fi

# Always run simple CLI (never blocks terminal)
exec "$BUN" run "$PICARD_SIMPLE" "$@"
